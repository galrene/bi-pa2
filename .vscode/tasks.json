{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		},
		
		{
			"type": "shell",
			"label": "C g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-Wall",
				"-pedantic",
				"-fsanitize=address",
				"-std=c++17",
				"${file}",
				"-o",
				"${fileDirname}/a.out"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": {
				"base" : "$gcc",
				"fileLocation" : "absolute"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"

		}
	]
	
}